{
  "compilerOptions": {
    "target": "ES2023",
    "allowJs": true,
    "skipLibCheck": false,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "rootDir": "./src",
    "outDir": "./dist"
  },
  "include": [
    "src/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}